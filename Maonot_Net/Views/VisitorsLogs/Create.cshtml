@model Maonot_Net.Models.VisitorsLog

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/Security.cshtml";
}

<h2>דיווח על כניסת אורח/ת</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @ViewBag.users
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="VistorName" class="control-label"></label>
                <input asp-for="VistorName" class="form-control" />
                <span asp-validation-for="VistorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VisitorID" class="control-label"></label>
                <input asp-for="VisitorID" class="form-control" />
                <span asp-validation-for="VisitorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentFullName" class="control-label"></label>
                <select asp-for="StudentFullName" class="form-control" asp-items="ViewBag.FullName"></select>
                <span asp-validation-for="StudentFullName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ApartmentNum" class="control-label"></label>
                <select asp-for="ApartmentNum" class="form-control" asp-items="ViewBag.Apartments"></select>
                <span asp-validation-for="ApartmentNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>

                <select asp-for="Room" asp-items="Html.GetEnumSelectList<RoomNum>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="שמירה" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-default">בחזרה לרשימה</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
