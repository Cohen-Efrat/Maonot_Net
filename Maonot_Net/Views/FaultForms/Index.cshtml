@model IEnumerable<Maonot_Net.Models.FaultForm>

@{
    ViewData["Title"] = "Index";
    var a = ViewBag.Aut;
    if (a.Equals("2"))
    {
        Layout = "~/Views/Shared/Manger.cshtml";
    }
    else if (a.Equals("3"))
    {
        Layout = "~/Views/Shared/HouseKeep.cshtml";
    }
}

<h2>רשימת תקלות</h2>

<p>
    <a asp-action="Create">טופס תקלה</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StundetId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apartment)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomNum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FullName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fix)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StundetId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fix)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">עריכה</a> |
                <a asp-action="Details" asp-route-id="@item.ID">פרטי התקלה</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">מחיקת תקלה</a>|
                <a asp-controller="FaultForms" asp-action="Fix" asp-route-id="@item.ID">תוקן</a>
            </td>
        </tr>
}
    </tbody>
</table>
