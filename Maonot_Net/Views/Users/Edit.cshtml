            </div>
            <div class="form-group">
                <label asp-for="ApartmentNum" class="control-label"></label>
                <input asp-for="ApartmentNum" class="form-control" />
                <span asp-validation-for="ApartmentNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label"></label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authorization" class="control-label"></label>
                <input asp-for="Authorization" class="form-control" />
                <span asp-validation-for="Authorization" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
