@model Maonot_Net.Models.ApprovalKit

@{
    ViewData["Title"] = "Create";
    var a = ViewBag.Aut;
    Layout = "~/Views/Shared/Tenant.cshtml";


}

<h2>ערכה קבלה חדשה</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoomType" class="control-label"></label>
                <select asp-for="RoomType" asp-items="Html.GetEnumSelectList<RoomType>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>

                <span asp-validation-for="RoomType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LivingWithReligious" class="control-label"></label>
                <select asp-for="LivingWithReligious" asp-items="Html.GetEnumSelectList<Choose>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>

                <span asp-validation-for="LivingWithReligious" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LivingWithSmoker" class="control-label"></label>
                <select asp-for="LivingWithSmoker" asp-items="Html.GetEnumSelectList<Choose>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                @*<input asp-for="LivingWithSmoker" class="form-control" />*@
                <span asp-validation-for="LivingWithSmoker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReligiousType" class="control-label"></label>
                <select asp-for="ReligiousType" asp-items="Html.GetEnumSelectList<Religious>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                @* <input asp-for="ReligiousType" class="form-control" />*@
                <span asp-validation-for="ReligiousType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HealthCondition" class="control-label"></label>
                <select asp-for="HealthCondition" asp-items="Html.GetEnumSelectList<HealthCondition>()" class="form-control">
                    <option selected="selected" value=""></option>
                </select>
                @*<input asp-for="HealthCondition" class="form-control" />*@
                <span asp-validation-for="HealthCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartnerId1" class="control-label"></label>
                <input asp-for="PartnerId1" class="form-control" />
                <span asp-validation-for="PartnerId1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartnerId2" class="control-label"></label>
                <input asp-for="PartnerId2" class="form-control" />
                <span asp-validation-for="PartnerId2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartnerId3" class="control-label"></label>
                <input asp-for="PartnerId3" class="form-control" />
                <span asp-validation-for="PartnerId3" class="text-danger"></span>
            </div>
            <a href="~/Files/contract.pdf" target="_blank"> חוזה מעונות</a>
            <br />

            בעת לחיצה על שמור הינך מאשר/ת כי קראת את החוזה ואת/ה מסכימ/ה לתנאים.<br />
         

            <div class="form-group">
                <input type="submit" value="שמור" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@if (a == 2)
{
    <div>
        <a asp-action="Index">חזרה לרשימה</a>
    </div>
}



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
