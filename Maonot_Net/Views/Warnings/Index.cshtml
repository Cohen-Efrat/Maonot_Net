@model IEnumerable<Maonot_Net.Models.Warning>

@{
    ViewData["Title"] = "Index";
    var a = ViewBag.Aut;
    if (a.Equals("2"))
    {
        Layout = "~/Views/Shared/Manger.cshtml";
    }
    else if (a.Equals("4"))
    {
        Layout = "~/Views/Shared/Discipline.cshtml";
    }
    else if (a.Equals("9"))
    {
        Layout = "~/Views/Shared/Tenant.cshtml";
    }
}

<h2>רשימת אזהרות</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">אזהרה חדשה</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">מספר אזהרה</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WarningNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                   
                    <a asp-action="Details" asp-route-id="@item.WarningId" class="btn btn-default">פרטים</a> 
                    @if (a.Equals("2"))
                    {
                     <a asp-action="Delete" asp-route-id="@item.WarningId"class="btn btn-danger">מחיקה</a>
                    }
                    
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="col-md-4">
    <img src="~/images/warning.png" />
</div>
